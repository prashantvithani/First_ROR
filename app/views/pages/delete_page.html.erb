<%= link_to("<< Back to Page list", {:action => 'page_list', :id => @subject.id}, :class => 'back-link')%>

<div class ="page delete">
	<h2>Delete page</h2>

	<%= form_for(:page, :url => {:action => 'destroy_page', :id => @subject.id, :page_id => @page.id}) do |f| %>
		<p>Are you sure you want to delete this page?</p>
		<p class = "reference-name"><%= @page.name %></p>

		<div class = "form-buttons">
			<%= submit_tag("Delete Page")%>
		</div>
	<%end%>
</div>