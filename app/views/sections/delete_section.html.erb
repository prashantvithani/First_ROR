<%= link_to("<< Back to Section list", {:action => 'section_list', :id => @subject.id, :page_id => @page.id}, :class => 'back-link')%>

<div class ="Section delete">
	<h2>Delete section</h2>

	<%= form_for(:section, :url => {:action => 'destroy_section', :id => @subject.id, :page_id => @page.id, :section_id => @section.id}) do |f| %>
		<p>Are you sure you want to delete this section?</p>
		<p class = "reference-name"><%= @section.name %></p>

		<div class = "form-buttons">
			<%= submit_tag("Delete section")%>
		</div>
	<%end%>
</div>